                <h2>Request Details</h2>
                <span class="close-btn" onclick="closeViewRequestModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div id="requestDetailsContent" class="request-details">
                </div>
            </div>
        </div>
    </div>

    <script>
        // SIDEBAR TOGGLE
        const menuBar = document.querySelector('#content nav .bx-menu');
        const sidebar = document.getElementById('sidebar');

        menuBar.addEventListener('click', function () {
            sidebar.classList.toggle('hide');
        });

        // SIDEBAR ACTIVE STATE
        const allSideMenu = document.querySelectorAll('#sidebar .side-menu.top li a');

        const currentPath = window.location.pathname;
        allSideMenu.forEach(item => {
            const li = item.parentElement;
            if (item.getAttribute('href') === currentPath || 
                (currentPath.includes(item.getAttribute('href')) && item.getAttribute('href') !== '/')) {
                allSideMenu.forEach(i => {
                    i.parentElement.classList.remove('active');
                })
                li.classList.add('active');
            }
        });

        allSideMenu.forEach(item=> {
            const li = item.parentElement;

            item.addEventListener('click', function () {
                allSideMenu.forEach(i=> {
                    i.parentElement.classList.remove('active');
                })
                li.classList.add('active');
                localStorage.setItem('activeMenu', item.getAttribute('href'));
            })
        });

        const activeMenu = localStorage.getItem('activeMenu');
        if (activeMenu) {
            allSideMenu.forEach(item => {
                if (item.getAttribute('href') === activeMenu) {
                    allSideMenu.forEach(i => {
                        i.parentElement.classList.remove('active');
                    })
                    item.parentElement.classList.add('active');
                }
            });
        }

        // DARK MODE
        const switchMode = document.getElementById('switch-mode');
        switchMode.addEventListener('change', function () {
            if(this.checked) {
                document.body.classList.add('dark');
            } else {
                document.body.classList.remove('dark');
            }
        });

        // ------ DATA FETCHING AND TABLE RENDERING ------
        let allRequests = []; 
        let activeRequests = [];
        let completedRequests = [];

        let currentActivePage = 1;
        const activeItemsPerPage = 5;
        let filteredActiveRequests = [];

        let currentCompletedPage = 1;
        const completedItemsPerPage = 5;
        let filteredCompletedRequests = [];

        const antiForgeryToken = document.getElementById('antiForgeryToken')?.value;

        async function fetchServiceRequests() {
            try {
                const response = await fetch('/Home/GetHomeownerServiceRequests');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                allRequests = await response.json();
                console.log("Fetched Requests:", allRequests);

                activeRequests = allRequests.filter(r => r.status.toLowerCase() !== 'completed' && r.status.toLowerCase() !== 'rejected');
                completedRequests = allRequests.filter(r => r.status.toLowerCase() === 'completed' || r.status.toLowerCase() === 'rejected');

                filterActiveRequests(); 
                filterCompletedServices();

            } catch (error) {
                console.error('Error fetching service requests:', error);
                showNotification('Failed to load service requests.', 'error');
            }
        }

        // ------ ACTIVE REQUESTS TABLE ------
        function initializeActiveTable() {
            updateActiveTable();
            updateActivePagination();
        }

        function updateActiveTable() {
            const startIndex = (currentActivePage - 1) * activeItemsPerPage;
            const endIndex = startIndex + activeItemsPerPage;
            const currentPageData = filteredActiveRequests.slice(startIndex, endIndex);

            const tableBody = document.getElementById('requestsTableBody');
            if (!tableBody) return;
            tableBody.innerHTML = ''; 

            if (currentPageData.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5">No active requests found.</td></tr>';
                return;
            }

            currentPageData.forEach(request => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${request.requestId}</td>
                    <td>${request.serviceType}</td>
                    <td><span class="status ${request.status.toLowerCase().replace(' ', '-')}">${request.status}</span></td>
                    <td>${request.dateSubmitted}</td>
                    <td>
                        <button class="view-btn" onclick="viewRequestDetails('${request.id}')" title="View Details">
                            <i class='bx bx-show'></i> View
                        </button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }

        function filterActiveRequests() {
            const searchText = document.getElementById('searchInput')?.value.toLowerCase() || '';

            filteredActiveRequests = activeRequests.filter(request => {
                return (request.requestId?.toLowerCase() || '').includes(searchText) ||
                       (request.serviceType?.toLowerCase() || '').includes(searchText) ||
                       (request.status?.toLowerCase() || '').includes(searchText);
            });

            currentActivePage = 1;
            updateActiveTable();
            updateActivePagination();
        }

        function updateActivePagination() {
            const totalPages = Math.ceil(filteredActiveRequests.length / activeItemsPerPage);
            const pageInfo = document.getElementById('pageInfo');
            const prevBtn = document.getElementById('prevPage');
            const nextBtn = document.getElementById('nextPage');

            if (pageInfo) pageInfo.textContent = `Page ${totalPages > 0 ? currentActivePage : 0} of ${totalPages}`;
            if (prevBtn) prevBtn.disabled = currentActivePage === 1;
            if (nextBtn) nextBtn.disabled = currentActivePage === totalPages || totalPages === 0;
        }

        function changeActivePage(delta) {
            const totalPages = Math.ceil(filteredActiveRequests.length / activeItemsPerPage);
            const newPage = currentActivePage + delta;
            
            if (newPage >= 1 && newPage <= totalPages) {
                currentActivePage = newPage;
                updateActiveTable();
                updateActivePagination();
            }
        }

        // ------ COMPLETED SERVICES TABLE ------
        function initializeCompletedTable() {
            updateCompletedTable();
            updateCompletedPagination();
        }

        function updateCompletedTable() {
            const startIndex = (currentCompletedPage - 1) * completedItemsPerPage;
            const endIndex = startIndex + completedItemsPerPage;
            const currentPageData = filteredCompletedRequests.slice(startIndex, endIndex);

            const tableBody = document.getElementById('completedServicesTableBody');
            if (!tableBody) return;
            tableBody.innerHTML = ''; 

             if (currentPageData.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5">No completed or rejected requests found.</td></tr>';
                return;
            }

            currentPageData.forEach(service => {
                const row = document.createElement('tr');
                let statusClass = service.status.toLowerCase().replace(' ', '-');
                let completionDetails = service.status.toLowerCase() === 'completed' 
                    ? `<td>${service.dateCompleted || 'N/A'}</td>
                       <td>${service.completionTime || 'N/A'}</td>
                       <td>${service.staffNotes || 'None'}</td>`
                    : `<td colspan="3">Status: <span class="status ${statusClass}">${service.status}</span></td>`;

                row.innerHTML = `
                    <td>${service.requestId}</td>
                    <td><span class="service-type ${service.serviceType.toLowerCase()}">${service.serviceType}</span></td>
                    ${completionDetails}
                `;
                tableBody.appendChild(row);
            });
        }

        function filterCompletedServices() {
            const searchText = document.getElementById('completedSearchInput')?.value.toLowerCase() || '';

            filteredCompletedRequests = completedRequests.filter(service => {
                return (service.requestId?.toLowerCase() || '').includes(searchText) ||
                       (service.serviceType?.toLowerCase() || '').includes(searchText) ||
                       (service.staffNotes?.toLowerCase() || '').includes(searchText);
            });

            currentCompletedPage = 1;
            updateCompletedTable();
            updateCompletedPagination();
        }

        function updateCompletedPagination() {
            const totalPages = Math.ceil(filteredCompletedRequests.length / completedItemsPerPage);
            const pageInfo = document.getElementById('completedPageInfo');
            const prevBtn = document.getElementById('prevCompletedPage');
            const nextBtn = document.getElementById('nextCompletedPage');

            if (pageInfo) pageInfo.textContent = `Page ${totalPages > 0 ? currentCompletedPage : 0} of ${totalPages}`;
            if (prevBtn) prevBtn.disabled = currentCompletedPage === 1;
            if (nextBtn) nextBtn.disabled = currentCompletedPage === totalPages || totalPages === 0;
        }

        function changeCompletedPage(delta) {
            const totalPages = Math.ceil(filteredCompletedRequests.length / completedItemsPerPage);
            const newPage = currentCompletedPage + delta;
            
            if (newPage >= 1 && newPage <= totalPages) {
                currentCompletedPage = newPage;
                updateCompletedTable();
                updateCompletedPagination();
            }
        }

        // ------ MODALS ------
        function openNewRequestModal() {
            const modal = document.getElementById('newRequestModal');
            if (modal) {
                 modal.style.display = 'block';
                 document.getElementById('serviceRequestForm')?.reset();
            }
        }

        function closeNewRequestModal() {
            const modal = document.getElementById('newRequestModal');
            if (modal) modal.style.display = 'none';
        }

        function openViewRequestModal() {
            const modal = document.getElementById('viewRequestModal');
            if (modal) modal.style.display = 'block';
        }

        function closeViewRequestModal() {
            const modal = document.getElementById('viewRequestModal');
            if (modal) modal.style.display = 'none';
        }

        function viewRequestDetails(requestId) {
            const request = allRequests.find(r => r.id === parseInt(requestId)); 
            if (!request) {
                console.error("Request not found for ID:", requestId);
                showNotification('Could not find request details.', 'error');
                return;
            }

            const detailsContent = document.getElementById('requestDetailsContent');
            if (!detailsContent) return;

            detailsContent.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">Request ID:</span>
                    <span class="detail-value">${request.requestId}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Service Type:</span>
                    <span class="detail-value">${request.serviceType}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Status:</span>
                    <span class="detail-value status ${request.status.toLowerCase().replace(' ', '-')}">${request.status}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Priority:</span>
                    <span class="detail-value priority ${request.priority.toLowerCase()}">${request.priority}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Date Submitted:</span>
                    <span class="detail-value">${request.dateSubmitted}</span>
                </div>
                 ${request.dateCompleted ? `
                    <div class="detail-row">
                        <span class="detail-label">Date Completed:</span>
                        <span class="detail-value">${request.dateCompleted}</span>
                    </div>
                 ` : ''}
                 ${request.completionTime ? `
                     <div class="detail-row">
                        <span class="detail-label">Completion Time:</span>
                        <span class="detail-value">${request.completionTime}</span>
                    </div>
                 ` : ''}
                <div class="detail-row full-width">
                    <span class="detail-label">Description:</span>
                    <div class="detail-value description">${request.description}</div>
                </div>
                 ${request.staffNotes ? `
                    <div class="detail-row full-width">
                        <span class="detail-label">Staff Notes:</span>
                        <div class="detail-value description">${request.staffNotes}</div>
                    </div>
                 ` : ''}
            `;
            openViewRequestModal();
        }

        // NOTFI
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification-message ${type}`;
            
            let icon = '';
            switch(type) {
                case 'success':
                    icon = 'bx bx-check-circle';
                    break;
                case 'error':
                    icon = 'bx bx-x-circle';
                    break;
                case 'warning':
                    icon = 'bx bx-error';
                    break;
                default:
                    icon = 'bx bx-info-circle';
            }
            
            notification.innerHTML = `
                <i class='${icon}'></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.add('hide');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 3000);
        }

        // FORM SUBMISSION (NEW REQUEST)
        document.getElementById('serviceRequestForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const serviceType = document.getElementById('serviceType').value;
            const description = document.getElementById('description').value;
            const priority = document.getElementById('priority').value;
            
            if (!serviceType) {
                showNotification('Please select a service type', 'error');
                return;
            }
            
            if (!description.trim()) {
                showNotification('Please provide a description', 'error');
                return;
            }
            
            if (!priority) {
                showNotification('Please select a priority level', 'error');
                return;
            }

            const requestData = {
                serviceType: serviceType,
                description: description,
                priority: priority
            };

            try {
                const response = await fetch('/Home/RequestService', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken 
                    },
                    body: JSON.stringify(requestData)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification(result.message || 'Service request submitted successfully!', 'success');
                    closeNewRequestModal();
                    
                    if (result.request) {
                         allRequests.unshift(result.request); 
                         activeRequests.unshift(result.request);
                         filterActiveRequests(); 
                    } else {
                        await fetchServiceRequests(); 
                    }
                } else {
                    throw new Error(result.message || 'Failed to submit request.');
                }
            } catch (error) {
                console.error('Error submitting service request:', error);
                showNotification(error.message || 'An error occurred while submitting the request.', 'error');
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            fetchServiceRequests(); 
            
            document.getElementById('searchInput')?.addEventListener('keyup', filterActiveRequests);
            document.getElementById('completedSearchInput')?.addEventListener('keyup', filterCompletedServices);

            document.getElementById('prevPage')?.addEventListener('click', () => changeActivePage(-1));
            document.getElementById('nextPage')?.addEventListener('click', () => changeActivePage(1));
            document.getElementById('prevCompletedPage')?.addEventListener('click', () => changeCompletedPage(-1));
            document.getElementById('nextCompletedPage')?.addEventListener('click', () => changeCompletedPage(1));
        });

        window.onclick = function(event) {
            const newRequestModal = document.getElementById('newRequestModal');
            const viewRequestModal = document.getElementById('viewRequestModal');
            if (event.target == newRequestModal) {
                closeNewRequestModal();
            }
            if (event.target == viewRequestModal) {
                closeViewRequestModal();
            }
        }

    </script>
</body>

